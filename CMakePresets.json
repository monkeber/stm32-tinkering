{
  "version": 8,
  "configurePresets": [
    {
      "name": "base",
      "description": "Sets build directory and generator",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "${sourceDir}/cmake/toolchain.cmake",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "debug",
      "displayName": "Blinky Debug Build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "inherits": ["base"]
    },
    {
      "name": "release",
      "displayName": "Blinky Release Build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "inherits": ["base"]
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "targets": ["blinky", "flash"]
    },
    {
      "name": "release",
      "configurePreset": "release",
      "targets": ["blinky"]
    }
  ]
}
